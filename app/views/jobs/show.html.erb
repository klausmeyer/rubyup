<table class="table table-striped">
  <tr>
    <th>ID</th>
    <td><%= @job.id %></td>
  </tr>
  <tr>
    <th>Repository</th>
    <td><%= @job.repository.name %></td>
  </tr>
  <tr>
    <th>Name</th>
    <td><%= @job.name %></td>
  </tr>
  <tr>
    <th>Config</th>
    <td><%= debug @job.config %></td>
  </tr>
  <tr>
    <th>State</th>
    <td><%= state_badge @job.state %></td>
  </tr>
  <tr>
    <th>Logs</th>
    <td>
      <% if @job.logs.any? %>
        <% @job.logs.each_with_index do |log, index| %>
          <hr>
          <pre>--- # <%= index + 1 %> ---<br><br><%= log %></pre>
        <% end %>
      <% else %>
        -
      <% end %>
    </td>
  </tr>
</table>
